<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="refresh" content="900">
    <style>body{font-size:16px;font-family:sans-serif;color:#fcfbe0;background-color:#080808;text-align: justify;}a:link{color:#fcfbe0;text-decoration:none;}a:hover{text-decoration:underline;}ul{padding-left:0;margin:8px;}li{margin:0;list-style-type:none;}.row {display: flex;}.column{flex: 33%;margin: 10px;}</style>

    <title>Feeds converted to HTML</title>
</head>
<body>
{% for parsed_feeds in chunk_feeds %}
 <div class="row">
{% for feed in parsed_feeds %}
{% for title, items in feed.items() %}
  <div class="column">
    <h2>{{ title }}</h2>
{% for item in items %}
    <ul>
        <li><a href="{{ item.link}}">{{ item.title }}</a></li>
    </ul>
{% endfor %}
{% endfor %}
</div>
{% endfor %}
</div>
{% endfor %}

</body>
</html>
